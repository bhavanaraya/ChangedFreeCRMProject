<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="FREE CRM Application Test Automation Test Suite">
    <listeners>
        <listener class-name="com.crm.qa.ExtentReporterListener.Listeners"/>
    </listeners>

    <test  name="FREE CRM App Regression TestCases">
        <classes>
            <class name="com.crm.qa.testcases.LoginPage1Test">
                <methods>
                    <include name="loginPage1TitleTest"/>
                    <include name="FreeCrmLogoTest"/>
                    <include name="validateLogin1Test"/>
                </methods>
            </class>

            <class name="com.crm.qa.testcases.LoginPage2Test">
                <methods>
                   <include name="loginPage2TitleTest"/>
                   <include name="Login1Test"/>
                </methods>
            </class>

            <class name="com.crm.qa.testcases.HomePageTest">
                <methods>
                    <include name="homepageTitleTest"/>
                    <include name="verifyUsernameLabelTest"/>
                    <include name="verifyContactsLinkTest"/>
                    <include name="clickOnAddContactsTest"/>
                </methods>
            </class>

            <class name="com.crm.qa.testcases.ContactsPageTest">
                <methods>
                    <include name="verifyContactsLabelTest"/>
                    <include name="verifyContactsByNameTest"/>
                    <include name="validateAddContact"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>